# Backend Environment Configuration
FLASK_ENV=dev
FLASK_APP=run.py
FLASK_DEBUG=1

# MongoDB
MONGODB_URI=mongodb://localhost:27017/smartmeter
MONGODB_DB_NAME=smartmeter

# MQTT Broker
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=smartmeter_user
MQTT_PASSWORD=secure_password_123
MQTT_CLIENT_ID=backend-service
MQTT_TOPIC_SUBSCRIBE=smartmeter/+/telemetry

# Flask
SECRET_KEY=your-secret-key-change-in-production
PORT=5000

# JWT
JWT_SECRET=jwt-secret-key-change-in-production
JWT_EXPIRY=7d

# CORS
CORS_ORIGIN=http://localhost:8000,http://localhost:3000

# Timezone & Currency
TIMEZONE=Asia/Kolkata
DEFAULT_CURRENCY=INR

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@smartmeter.local

# Logging
LOG_LEVEL=INFO
