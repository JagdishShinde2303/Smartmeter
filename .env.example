# ============================================================
# ENVIRONMENT CONFIGURATION (Copy to .env and fill in values)
# ============================================================

# --- MQTT Broker ---
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=smartmeter_user
MQTT_PASSWORD=secure_password_123
MQTT_CLIENT_ID=backend-service
MQTT_TOPIC_SUBSCRIBE=smartmeter/+/telemetry

# --- MongoDB Atlas ---
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smartmeter?retryWrites=true&w=majority
MONGODB_DB_NAME=smartmeter

# --- Backend Server ---
PORT=5000
NODE_ENV=development
LOG_LEVEL=debug

# --- JWT Authentication ---
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=7d

# --- Device Management ---
ALLOWED_DEVICE_IDS=meter-001,meter-002,meter-003
TELEMETRY_INTERVAL_SECONDS=10

# --- Billing ---
BILLING_CRON_SCHEDULE=0 5 1 * *
TIMEZONE=Asia/Kolkata
DEFAULT_CURRENCY=INR

# --- Email (for invoice delivery) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@smartmeter.local

# --- Frontend URL ---
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# --- OTA Firmware Updates ---
FIRMWARE_REPO=https://github.com/your-org/smartmeter-firmware
FIRMWARE_VERSION=1.0.0

# --- Logging & Monitoring ---
SENTRY_DSN=https://your-sentry-key@sentry.io/project-id
PROMETHEUS_PUSHGATEWAY=http://localhost:9091

# --- API Rate Limiting ---
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# --- Database Backup ---
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# --- Security ---
CORS_ORIGIN=http://localhost:3000
API_KEY_SECRET=your_api_key_secret
ENCRYPT_PII=true
